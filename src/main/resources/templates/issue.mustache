{{>header}}

<div class="row center-align">
    <h3>The {{id}}st issue of {{username}}</h3>
</div>
{{#issue}}
<div class="row">
    <div class="col s6">
        <div class="card">
            <div class="card-content">
                <span class="card-title">{{name}}</span>
                <p>{{message}}</p>
            </div>
        </div>
    </div>
</div>
{{/issue}}
{{#comments}}
<div class="row">
    <div class="col s6">
        <div class="card">
            <div class="card-content">
                <span class="card-title">{{author}}</span>
                <p>{{comment}}</p>
            </div>
        </div>
    </div>
</div>
{{/comments}}
{{>footer}}