{{>header}}

<div class="row center-align">
    <h3>The {{id}}st project of {{username}}</h3>
</div>
{{#project}}
<div class="row">
    <div class="col s6">
        <div class="card">
            <div class="card-content">
                <span class="card-title">{{name}}</span>
                <p>{{description}}</p>
            </div>
        </div>
    </div>
</div>
{{/project}}

{{#issues}}
<div class="row">
    <div class="col s6">
        <div class="card">
            <div class="card-content">
                <span class="card-title">{{name}}</span>
                <p>{{message}}</p>
            </div>
        </div>
    </div>
</div>
{{/issues}}
{{>footer}}